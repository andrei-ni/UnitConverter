@using System.Reflection
@using System.ComponentModel;
@using UnitConverter.Models;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Unit Converter</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column scroll" style="height: 600px">
        @*<div class="nav-item px-3">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
        <span class="oi oi-home" aria-hidden="true"></span> Home
        </NavLink>
        </div>*@

        <div class="nav-item px-2">
            <NavLink class="nav-link" href="percent">
                <span class="text-light" aria-hidden="true">
                    &ensp; Percent Calculator
                </span>
            </NavLink>
        </div>

        @foreach (var category in typeof(Menu).GetProperties())
        {
            <div class="nav-item px-2">
                <NavLink class="nav-link" href="@category.Name">
                    <span class="" aria-hidden="true">
                        &ensp; @category.Name
                    </span>
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }


}
